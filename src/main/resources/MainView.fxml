<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="bank.ui.MainViewController"
            prefHeight="500" prefWidth="600">

    <top>
        <MenuBar>
            <Menu text="Account">
                <MenuItem text="Neu anlegen" onAction="#handleAddAccount"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Alle Accounts:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <ListView fx:id="accountListView" VBox.vgrow="ALWAYS">
                <contextMenu>
                    <ContextMenu>
                        <items>
                            <MenuItem text="Auswählen" onAction="#handleSelectAccount"/>
                            <MenuItem text="Löschen" onAction="#handleDeleteAccount"/>
                        </items>
                    </ContextMenu>
                </contextMenu>
            </ListView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Neuen Account erstellen" onAction="#handleAddAccount"/>
        </HBox>
    </bottom>
</BorderPane>